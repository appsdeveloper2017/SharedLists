<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Login style-->
    <style name="LoginTextCliclable">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/xlarge_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/violet</item>
    </style>

    <!--Activity settings style-->
    <style name="AlternativeLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">50dp</item>
    </style>

    <style name="ContentHorizontalLinear">
        <item name="android:layout_marginTop">@dimen/margin_top_horintal_linear</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageResources">
        <item name="android:layout_width">@dimen/size_icons</item>
        <item name="android:layout_height">@dimen/size_icons</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="TextviewAlternative">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="EditSettings">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSettings">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">@dimen/confirmations_size</item>
        <item name="android:layout_marginRight">@dimen/large_margin</item>
        <item name="android:paddingRight">@dimen/medium_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CardViewUser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_marginStart">@dimen/xlarge_margin</item>
        <item name="android:layout_marginEnd">@dimen/xlarge_margin</item>
        <item name="android:layout_marginTop">200dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

